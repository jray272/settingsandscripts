alias ll="ls -l"
alias lla="ls -la"

alias eamcs="emacs"
alias e="emacs"

function foogrep() {
  grep -rn --color $@
}

alias gc='foogrep --include="*.cc" --include="*.c" --include="*.cpp" --include="*.cxx"'
alias gh='foogrep --include="*.h" --include="*.hpp"'
alias gp='foogrep --include="*.py"'
alias gpr='foogrep --include="*.proto"'
